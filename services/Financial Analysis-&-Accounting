    <script>
        // Financial Form Handler
        document.getElementById('financialForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const financialMessage = document.getElementById('financialMessage');
            const name = document.getElementById('fin_name').value;
            const contact = document.getElementById('fin_contact').value;
            const email = document.getElementById('fin_email').value;
            const phone = document.getElementById('fin_phone').value;
            const service = document.getElementById('fin_service').value;
            const companySize = document.getElementById('fin_company_size').value;
            const details = document.getElementById('fin_details').value;
            
            // Create mailto link with form data
            const subject = encodeURIComponent(`Financial Services Request: ${service} - ${name}`);
            const body = encodeURIComponent(
                `FINANCIAL SERVICES REQUEST\n\n` +
                `Company Name: ${name}\n` +
                `Contact Person: ${contact}\n` +
                `Email: ${email}\n` +
                `Phone: ${phone}\n` +
                `Company Size: ${companySize}\n` +
                `Service Requested: ${service}\n\n` +
                `FINANCIAL NEEDS:\n${details}\n\n` +
                `---\n` +
                `CONFIDENTIAL - Financial Services Request\n` +
                `Sent from AEC Financial Services Request Form\n` +
                `Date: ${new Date().toLocaleString()}`
            );
            
            const mailtoLink = `mailto:ArmelSandjong@afriqueeuropeconnexionvmetc.com?subject=${subject}&body=${body}`;
            
            // Open default email client
            window.location.href = mailtoLink;
            
            // Show success message
            financialMessage.style.display = 'block';
            financialMessage.style.background = '#c6f6d5';
            financialMessage.style.color = '#22543d';
            financialMessage.innerHTML = '<i class="fas fa-check-circle"></i> Your email client has been opened. Please send the email to complete your financial services request. We will respond within 24 hours.';
            
            // Reset form
            setTimeout(() => {
                this.reset();
            }, 1000);
        });

        // Mobile menu toggle
        function toggleMobileMenu() {
            const navLinks = document.getElementById('navLinks');
            navLinks.classList.toggle('active');
        }
    </script>
</body>
</html>
